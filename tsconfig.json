{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "public",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
